/* QuickSort -- ordenacao rapida */

void quickSort(int [] A, int p, int r)
{
  int q;
  if( p < r )
  {
    q = particao(A, p, r);
    quickSort(A, p, q-1);
    quickSort(A, q+1, r);
  }
}

int particao(int [] A, int p, int r)
{
 int x, i, j, temp;

 x = A[r]; /* pivo */
 i = p - 1;

 for(j=p; j <= r-1; ++j)
   if(A[j] >= x)
    {
     i++;
     /* trocar */
     temp = A[i];
     A[i] = A[j];
     A[j] = temp;
    }

 /* reposicionar o pivo */
     temp = A[i+1];
     A[i+1] = A[r];
     A[r] = temp;
 imprimeVetorPar(A, p, r);
return (i+1);
}
